@model Company.Models.Models.Employee


<form method="post">
    <input asp-for="employeeNo" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Employee</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="employeeName">Name</label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Salary"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="EdepartmentNo">Department number</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <span class="form-control">@Model.employeeName</>
                    </div>
                    <div class="col-4">
                        <span class="form-control">@Model.Salary</>
                    </div>
                    <div class="col-4">
                        <span class="form-control">@Model.EdepartmentNo</>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }