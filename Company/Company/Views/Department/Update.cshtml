@model Company.Models.Models.Department

<form method="post">
    <input asp-for="departmentNo" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black pl-3">Update Department</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="departmentName">Name</label>
                    </div>
                    <div class="col-6">
                        <label asp-for="departmentLocation">Location</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="departmentName" class="form-control"></>
                        <span asp-validation-for="departmentName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="departmentLocation" class="form-control"></>
                        <span asp-validation-for="departmentLocation" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-dark w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    }