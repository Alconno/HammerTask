@model Company.Models.Models.Department


<form method="post">
    <input asp-for="departmentNo" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black pl-3">Delete Department</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="departmentName">Name</label>
                    </div>
                    <div class="col-6">
                        <label asp-for="departmentLocation">Location</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <span class="form-control">@Model.departmentName</>
                    </div>
                    <div class="col-6">
                        <span class="form-control">@Model.departmentLocation</>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }